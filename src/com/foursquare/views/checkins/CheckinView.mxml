<?xml version="1.0" encoding="utf-8"?>
<checkins:CheckinViewBase
					xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:views="com.foursquare.views.*"
					xmlns:checkins="com.foursquare.views.checkins.*"
					width="100%" height="100%" >
	<checkins:layout><s:VerticalLayout /></checkins:layout>
	
	<s:HGroup width="100%">
	<s:Label text="Where your friends are checking in"  fontSize="11"/>
	</s:HGroup>
	
	<s:List id="checkinList" width="100%" height="100%" styleName="checkinList"
			itemRenderer="com.foursquare.views.checkins.CheckinItem"
			/>
		
	<!--click="checkForUpdates();"-->
	<s:Button label="Check for new checkins" right="100" fontWeight="normal" click="getCheckins()"/>
</checkins:CheckinViewBase>