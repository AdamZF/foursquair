<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer 
		xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo"
		 xmlns:navigation="com.foursquare.views.navigation.*">
	<fx:Script>
		<![CDATA[
			import com.foursquare.events.LoginEvent;
		]]>
	</fx:Script>
	<s:HGroup  top="11" width="100%">
		<s:Label id="userName" fontWeight="bold" fontSize="12" />
		<s:Label text="Logout" click="{dispatchEvent(new LoginEvent(LoginEvent.LOGOUT))}"
				 fontSize="10" textDecoration="underline"/>
	</s:HGroup>
	<navigation:Navigation width="100%" top="31" height="30" />
	
	<!--image with 1 px white border-->
	<s:Group width="52" height="52" right="12" top="12">
		<s:Rect width="100%" height="100%">
			<s:stroke>
				<s:SolidColorStroke color="0xffffff" />
			</s:stroke>
		</s:Rect>
		<s:BitmapImage id="userImage" smooth="true" width="50" height="50" left="1" top="1" />
	</s:Group>
</s:SkinnableContainer>